{
  "expo": {
    "name": "myApp",
    "slug": "myApp",
    "scheme": "myapp",  // O esquema que seu app vai usar para deeplinks
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.myapp"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff",
        "package": "com.myapp"
      },
      "intentFilters": [
        {
          "action": "VIEW",
          "data": {
            "scheme": "myapp",
            "host": "details"
          },
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "navigation": {
      "linking": {
        "prefixes": ["myapp://"],
        "config": {
          "screens": {
            "Home": "",
            "Details": "details/:itemId"  // Definindo o par√¢metro itemId para a tela de detalhes
          }
        }
      }
    }
  }
}
